package org.jdataex.util.logger;

import org.slf4j.Marker;

public interface ILogger {

	public abstract void warn(String format);

	public abstract void warn(String msg, Throwable t);

	public abstract void warn(String format, Object arg);

	public abstract void warn(String format, Object... arguments);

	public abstract void warn(String format, Object arg1, Object arg2);

	public abstract void warn(Marker marker, String msg);

	public abstract void warn(Marker marker, String msg, Throwable t);

	public abstract void warn(Marker marker, String format, Object arg);

	public abstract void warn(Marker marker, String format, Object... arguments);

	public abstract void warn(Marker marker, String format, Object arg1,
			Object arg2);

	public abstract void trace(String msg);

	public abstract void trace(String msg, Throwable t);

	public abstract void trace(String format, Object arg);

	public abstract void trace(String format, Object... arguments);

	public abstract void trace(String format, Object arg1, Object arg2);

	public abstract void trace(Marker marker, String msg);

	public abstract void trace(Marker marker, String msg, Throwable t);

	public abstract void trace(Marker marker, String format, Object arg);

	public abstract void trace(Marker marker, String format, Object... arguments);

	public abstract void trace(Marker marker, String format, Object arg1,
			Object arg2);

	public abstract boolean isWarnEnabled(Marker marker);

	public abstract boolean isWarnEnabled();

	public abstract boolean isTraceEnabled(Marker marker);

	public abstract boolean isTraceEnabled();

	public abstract boolean isInfoEnabled(Marker marker);

	public abstract boolean isInfoEnabled();

	public abstract boolean isErrorEnabled(Marker marker);

	public abstract boolean isErrorEnabled();

	public abstract boolean isDebugEnabled(Marker marker);

	public abstract boolean isDebugEnabled();

	public abstract void info(String msg);

	public abstract void info(String msg, Throwable t);

	public abstract void info(String format, Object arg1);

	public abstract void info(String format, Object... arguments);

	public abstract void info(String format, Object arg1, Object arg2);

	public abstract void info(Marker marker, String msg);

	public abstract void info(Marker marker, String msg, Throwable t);

	public abstract void info(Marker marker, String format, Object arg);

	public abstract void info(Marker marker, String format, Object... arguments);

	public abstract void info(Marker marker, String format, Object arg1,
			Object arg2);

	public abstract String getName();

	public abstract void error(String msg);

	public abstract void error(String msg, Throwable t);

	public abstract void error(String format, Object arg);

	public abstract void error(String format, Object... arguments);

	public abstract void error(String format, Object arg1, Object arg2);

	public abstract void error(Marker marker, String msg);

	public abstract void error(Marker marker, String msg, Throwable t);

	public abstract void error(Marker marker, String format, Object arg);

	public abstract void error(Marker marker, String format, Object... arguments);

	public abstract void error(Marker marker, String format, Object arg1,
			Object arg2);

	public abstract void debug(String msg);

	public abstract void debug(String msg, Throwable t);

	public abstract void debug(String format, Object arg);

	public abstract void debug(String format, Object... arguments);

	public abstract void debug(String format, Object arg1, Object arg2);

	public abstract void debug(Marker marker, String msg);

	public abstract void debug(Marker marker, String msg, Throwable t);

	public abstract void debug(Marker marker, String format, Object arg);

	public abstract void debug(Marker marker, String format, Object... arguments);

	public abstract void debug(Marker marker, String format, Object arg1,
			Object arg2);

	/**
	 * 以下都是扩展的方法。用于支持国际化打印日志。
	 */
	public abstract void debugI18nc(Class<?> clazz, String key);

	public abstract void debugI18nc(Class<?> clazz, String key, Throwable t);

	public abstract void debugI18nc(Class<?> clazz, String key, Object arg);

	public abstract void debugI18nc(Class<?> clazz, String key, Object... arguments);

	public abstract void debugI18nc(Class<?> clazz, String key, Object arg1,
			Object arg2);

	public abstract void errorI18nc(Class<?> clazz, String key);

	public abstract void errorI18nc(Class<?> clazz, String key, Throwable t);

	public abstract void errorI18nc(Class<?> clazz, String key, Object arg);

	public abstract void errorI18nc(Class<?> clazz, String key, Object... arguments);

	public abstract void errorI18nc(Class<?> clazz, String key, Object arg1,
			Object arg2);

	public abstract void warnI18nc(Class<?> clazz, String key);

	public abstract void warnI18nc(Class<?> clazz, String key, Throwable t);

	public abstract void warnI18nc(Class<?> clazz, String key, Object arg);

	public abstract void warnI18nc(Class<?> clazz, String key, Object... arguments);

	public abstract void warnI18nc(Class<?> clazz, String key, Object arg1,
			Object arg2);

	public abstract void infoI18nc(Class<?> clazz, String key);

	public abstract void infoI18nc(Class<?> clazz, String key, Throwable t);

	public abstract void infoI18nc(Class<?> clazz, String key, Object arg);

	public abstract void infoI18nc(Class<?> clazz, String key, Object... arguments);

	public abstract void infoI18nc(Class<?> clazz, String key, Object arg1,
			Object arg2);

	public abstract void traceI18nc(Class<?> clazz, String key);

	public abstract void traceI18nc(Class<?> clazz, String key, Throwable t);

	public abstract void traceI18nc(Class<?> clazz, String key, Object arg);

	public abstract void traceI18nc(Class<?> clazz, String key, Object... arguments);

	public abstract void traceI18nc(Class<?> clazz, String key, Object arg1,
			Object arg2);

}
